<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:id="@+id/iv_bar_back"
        android:layout_width="@dimen/dimen_48dp"
        android:layout_height="@dimen/dimen_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/title_bar_iv_describe"
        android:visibility="gone"/>

    <LinearLayout android:id="@+id/ll_bar_back"
        android:layout_width="@dimen/dimen_48dp"
        android:layout_height="@dimen/dimen_48dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone">

        <ImageView android:id="@+id/iv_bar_back_"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:contentDescription="@string/title_bar_iv_describe"
            android:src="@drawable/back"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/ll_bar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_48dp"
        android:layout_marginEnd="@dimen/dimen_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout android:id="@+id/ll_bar_tool"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_48dp"
        android:minWidth="@dimen/dimen_48dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>